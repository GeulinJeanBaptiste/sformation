{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<div class="card-header">
						<h1 class="text-center">Register</h1>
					</div>
					<div class="card-body">
						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}

						<div class="mb-3">
							{{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(registrationForm.age, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(registrationForm.plainPassword, {
                            'attr': {'class': 'form-control'},
                            'label': 'Password'
                        }) }}
						</div>

						<div class="mb-3">
							{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							<label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">
								
							</label>
						</div>

						<div class="text-center">
							<button type="submit" class="btn btn-primary">Register</button>
						</div>

						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

